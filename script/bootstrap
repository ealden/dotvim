#!/bin/sh

set -e

echo ""
echo "  Vim Configuration"
echo ""

echo "  + Setting up packages..."
rm -rf pack/

mkdir -p pack/general/start
pushd pack/general/start > /dev/null

git clone -q https://github.com/ctrlpvim/ctrlp.vim
git clone -q https://github.com/tpope/vim-bundler
git clone -q https://github.com/tpope/vim-commentary
git clone -q https://github.com/tpope/vim-cucumber
git clone -q https://github.com/tpope/vim-endwise
git clone -q https://github.com/tpope/vim-fugitive
git clone -q https://github.com/tpope/vim-markdown
git clone -q -b 'v5.4' https://github.com/tpope/vim-rails
git clone -q https://github.com/tpope/vim-rbenv
git clone -q https://github.com/tpope/vim-surround

popd > /dev/null

echo "  + Setting up symlinks..."
ln -fs vimrc ~/.vimrc

echo ""
echo "  We're ready to rock!"
