#!/bin/sh

set -e

echo ""
echo "  Ealden's Vim Config"
echo ""

# Initialize submodules
echo "  + Initializing submodules..."
git submodule init
git submodule update

# Install bundles
echo "  + Installing bundles..."
vim +PluginUpdate +qall

echo "  + Setting up symlinks..."
ln -fs vimrc ~/.vimrc

echo ""
echo "  We're ready to rock!"
