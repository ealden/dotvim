#!/bin/sh

set -e

echo ""
echo "  Ealden's Vim Config"
echo ""

echo "  + Setting up packages..."
rm -rf pack/

mkdir -p pack/general/start
pushd pack/general/start > /dev/null

git clone -q https://github.com/ctrlpvim/ctrlp.vim
git clone -q https://github.com/tpope/vim-fugitive

popd > /dev/null

echo "  + Setting up symlinks..."
ln -fs vimrc ~/.vimrc

echo ""
echo "  We're ready to rock!"
